<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="Szrotex3.model">

    <class name="Car" table="car">
        <id name="id" column="id">
            <generator class="native"/>
        </id>

        <property name="brand" column="brand"/>
        <property name="model" column="model"/>
        <property name="engineCapacity" column="engineCapacity"/>
        <property name="engineType" column="engineType"/>
        <property name="enginePower" column="enginePower"/>
        <property name="transsmision" column="transsmision"/>
        <property name="productionYear" column="productionYear"/>
        <property name="doorsQuantity" column="doorsQuantity"/>
        <property name="seatsQuantity" column="seatsQuantity"/>

        <one-to-one name="id" class="Vehicle" cascade="save-update"></one-to-one>

    </class>

</hibernate-mapping>